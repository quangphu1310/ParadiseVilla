@model VillaNumberUpdateVM

<form asp-action="Update">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Villa</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="VillaNumberUpdateDTO.VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumberUpdateDTO.VillaNo" class="form-control" />
                <span asp-validation-for="VillaNumberUpdateDTO.VillaNo" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumberUpdateDTO.SpeacialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumberUpdateDTO.SpeacialDetails" class="form-control" />
                <span asp-validation-for="VillaNumberUpdateDTO.SpeacialDetails" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumberUpdateDTO.VillaID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-items="@Model.VillaList" asp-for="VillaNumberUpdateDTO.VillaID" class="form-control">
                    <option selected disabled>Choose the villa</option>
                </select>
                <span asp-validation-for="VillaNumberUpdateDTO.VillaID" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="VillaNumber" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}